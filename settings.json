{
  "permissions": {
    "defaultMode": "default",
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./**/*secret*.*)",
      "Read(./**/*key*.*)",
      "Read(./**/*token*.*)",
      "Bash(curl:*)",
      "WebFetch"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git fetch:*)",
      "Bash(kubectl:*)",
      "Bash(helm:*)",
      "Bash(aws:*)",
      "WebSearch"
    ],
    "allow": [
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git worktree list)",
      "Bash(pytest:*)",
      "Bash(python -m pytest:*)",
      "Bash(python -m pip:*)",
      "Bash(python:*)",
      "Bash(make:*)",
      "Bash(npm:*)",
      "Bash(node:*)",
      "Bash(ls:*)",
      "Bash(dir:*)"
    ],
    "disableBypassPermissionsMode": "disable"
  },
  "verbose": false
}
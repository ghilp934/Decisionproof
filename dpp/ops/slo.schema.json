{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Decisionproof Ops SLO Pack",
  "type": "object",
  "required": ["service", "as_of", "window", "indicators"],
  "properties": {
    "service": { "type": "string", "minLength": 1 },
    "as_of": { "type": "string", "minLength": 8 },
    "window": { "type": "string", "minLength": 2 },
    "indicators": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "type", "objective", "measurement"],
        "properties": {
          "id": { "type": "string", "minLength": 3 },
          "name": { "type": "string", "minLength": 3 },
          "type": { "type": "string", "enum": ["availability", "error_rate", "latency", "throttling", "saturation"] },
          "objective": { "type": "number", "minimum": 0, "maximum": 1 },
          "measurement": {
            "type": "object",
            "required": ["source", "signal"],
            "properties": {
              "source": { "type": "string", "enum": ["prometheus", "otel", "logs", "mixed"] },
              "signal": { "type": "string", "minLength": 3 },
              "notes": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}

{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SQSFeedbackQueueAccess",
      "Effect": "Allow",
      "Action": [
        "sqs:ReceiveMessage",
        "sqs:DeleteMessage",
        "sqs:GetQueueAttributes",
        "sqs:ChangeMessageVisibility"
      ],
      "Resource": "arn:aws:sqs:ap-northeast-2:*:decisionproof-ses-feedback-queue"
    },
    {
      "Sid": "SQSDLQReadAccess",
      "Effect": "Allow",
      "Action": [
        "sqs:ReceiveMessage",
        "sqs:GetQueueAttributes"
      ],
      "Resource": "arn:aws:sqs:ap-northeast-2:*:decisionproof-ses-feedback-dlq"
    },
    {
      "Sid": "CloudWatchMetricsOptional",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:PutMetricData"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "cloudwatch:namespace": "Decisionproof/SESFeedback"
        }
      }
    }
  ]
}
